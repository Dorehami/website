{% extends 'base.html.twig' %}

{% block title %}ویرایش پروفایل | دورهمی{% endblock %}
{% block meta_description %}ویرایش اطلاعات پروفایل در دورهمی{% endblock %}
{% block meta_keywords %}پروفایل کاربر, ویرایش پروفایل, دورهمی, جامعه توسعه‌دهندگان نرم‌افزار{% endblock %}

{% block body %}
    <section>
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
            <div class="pt-28 md:pt-36">
                <div class="max-w-3xl mx-auto">
                    <div class="pt-6 pb-12 md:pb-20">
                        <div class="mb-8 text-center">
                            <h1 class="h2 font-badkhat bg-clip-text text-transparent bg-linear-to-tr to-indigo-400 via-sky-600 from-slate-700 dark:from-indigo-500 dark:via-sky-300 dark:to-slate-200 mb-4">
                                ویرایش پروفایل
                            </h1>
                            <p class="text-slate-500 dark:text-slate-400">
                                اطلاعات پروفایل خود را در دورهمی ویرایش کنید
                            </p>
                        </div>

                        <div class="rounded-sm border border-slate-200 light:bg-slate-50 dark:border-slate-700 p-6 dark:bg-linear-to-tr dark:from-slate-800/20 dark:via-slate-800/50 dark:to-slate-800/20">
                            {{ form_start(form) }}

                            {% for message in app.flashes('success') %}
                                <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 rounded">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 rounded">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <div class="mb-8 flex flex-col items-center">
                                <img src="{{ app.user.avatarUrl }}" alt="{{ app.user.displayName }}"
                                     class="w-32 h-32 rounded-full border-4 border-slate-200 dark:border-slate-700 mb-4">
                                <p class="text-sm text-slate-500 dark:text-slate-400">
                                    تصویر پروفایل شما از سرویس احراز هویت دریافت می‌شود و در حال حاضر قابل تغییر نیست
                                </p>
                            </div>

                            <div class="mb-6">
                                {{ form_label(form.displayName, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-600 dark:text-slate-300 mb-2'}}) }}
                                {{ form_widget(form.displayName) }}
                                {{ form_errors(form.displayName, {'attr': {'class': 'text-sm text-red-500 mt-1'}}) }}
                                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                                    این نام در سایت دورهمی به کاربران دیگر نمایش داده می‌شود
                                </p>
                            </div>
                            
                            <div class="mb-6">
                                {{ form_label(form.receiveUpvoteEmailNotification, null, {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="flex gap-2 items-center">
                                    {{ form_widget(form.receiveUpvoteEmailNotification, {'attr': {'class': 'form-checkbox text-sm'}}) }}
                                    <p class="block text-sm font-medium text-slate-600 dark:text-slate-300">
                                        دریافت ایمیل هنگام دریافت رای مثبت روی پست‌های شما
                                    </p>
                                </div>
                                {{ form_errors(form.receiveUpvoteEmailNotification) }}
                            </div>

                            <div class="mb-6">
                                {{ form_label(form.receiveCommentEmailNotification, null, {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="flex gap-2 items-center">
                                    {{ form_widget(form.receiveCommentEmailNotification, {'attr': {'class': 'form-checkbox text-sm'}}) }}
                                    <p class="block text-sm font-medium text-slate-600 dark:text-slate-300">
                                        دریافت ایمیل هنگام ثبت نظر جدید روی پست‌های شما
                                    </p>
                                </div>
                                {{ form_errors(form.receiveCommentEmailNotification) }}
                            </div>

                            <div class="mb-6">
                                {{ form_label(form.receiveCommentReplyEmailNotification, null, {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="flex gap-2 items-center">
                                    {{ form_widget(form.receiveCommentReplyEmailNotification, {'attr': {'class': 'form-checkbox text-sm'}}) }}
                                    <p class="block text-sm font-medium text-slate-600 dark:text-slate-300">
                                        دریافت ایمیل در صورت پاسخ روی کامنت‌های شما
                                    </p>
                                </div>
                                {{ form_errors(form.receiveCommentReplyEmailNotification) }}
                            </div>


                            <div class="flex gap-4 mt-8">
                                <button type="submit" class="btn-sm text-white bg-indigo-500 hover:bg-indigo-600">
                                    ذخیره تغییرات
                                </button>
                                <a href="{{ path('app_profile_index') }}" class="btn-sm text-slate-600 dark:text-slate-400 bg-slate-200 dark:bg-slate-700 hover:bg-slate-300 dark:hover:bg-slate-600">
                                    انصراف
                                </a>
                            </div>

                            {{ form_end(form) }}
                        </div>

                        <div class="mt-8 rounded-sm border border-slate-200 light:bg-slate-50 dark:border-slate-700 p-6 dark:bg-linear-to-tr dark:from-slate-800/20 dark:via-slate-800/50 dark:to-slate-800/20">
                            <h2 class="text-lg font-bold text-slate-600 dark:text-slate-200 mb-4">اطلاعات بیشتر</h2>

                            {% if app.user.email %}
                                <div class="flex items-center justify-between mb-4 p-4 bg-slate-100 dark:bg-slate-800 rounded">
                                    <div class="flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-500 ml-3">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                        </svg>
                                        <div>
                                            <h3 class="font-medium text-slate-600 dark:text-slate-200">ایمیل</h3>
                                            <p class="text-sm text-slate-500 dark:text-slate-400 dir-ltr text-left">
                                                {{ app.user.email }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="border-t dark:border-slate-700 pt-4 mt-6">
                                <h3 class="text-md font-medium text-slate-600 dark:text-slate-200 mb-2">عملیات‌های حساب کاربری</h3>
                                <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">
                                    اگر می‌خواهید درباره حساب کاربری خود سوالی بپرسید یا درخواستی داشته باشید، لطفاً با ادمین‌های دیسکورد تماس بگیرید.
                                </p>
                                <div class="flex flex-wrap gap-4">
                                    <a href="{{ path('app_logout') }}" class="btn-sm bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 hover:bg-red-200 dark:hover:bg-red-900/50 border border-red-200 dark:border-red-800">
                                        خروج از حساب کاربری
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}