{% extends 'base.html.twig' %}

{% block title %}دورهمی | جامعه توسعه‌دهندگان نرم‌افزار{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <!-- Discord stats -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="mb-4 md:mb-0">
                    <h2 class="text-xl font-semibold text-primary-800 mb-2">جامعه دیسکورد دورهمی</h2>
                    <p class="text-gray-600">محیطی برای گفتگو و یادگیری توسعه نرم‌افزار</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="flex items-center mb-2">
                        <svg class="w-5 h-5 text-primary-600 mr-2" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 24 24" fill="currentColor">
                            <path d="M8.25 4.5a3.75 3.75 0 117.5 0v8.25a3.75 3.75 0 11-7.5 0V4.5z"/>
                            <path d="M6 10.5a.75.75 0 01.75.75v1.5a5.25 5.25 0 1010.5 0v-1.5a.75.75 0 011.5 0v1.5a6.751 6.751 0 01-6 6.709v2.291h3a.75.75 0 010 1.5h-7.5a.75.75 0 010-1.5h3v-2.291a6.751 6.751 0 01-6-6.709v-1.5A.75.75 0 016 10.5z"/>
                        </svg>
                        <span class="text-2xl font-bold text-gray-800">{{ discord_users ?? 2500 }}</span>
                        <span class="text-gray-500 mr-2">کاربر</span>
                    </div>
                    <a href="https://discord.gg/your-invite"
                       class="inline-flex items-center py-2 px-4 rounded bg-primary-600 text-white hover:bg-primary-700 transition duration-200">
                        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
                        </svg>
                        پیوستن به دیسکورد
                    </a>
                </div>
            </div>
        </div>

        <!-- Post list header -->
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">مطالب جدید</h1>
            <div class="flex space-x-2 space-x-reverse">
                <a href="#" class="px-3 py-1 rounded text-sm text-primary-600 hover:bg-gray-100 transition">جدیدترین</a>
                <a href="#" class="px-3 py-1 rounded text-sm text-gray-600 hover:bg-gray-100 transition">محبوب‌ترین</a>
                <a href="#" class="px-3 py-1 rounded text-sm text-gray-600 hover:bg-gray-100 transition">داغ‌ترین</a>
            </div>
        </div>

        <!-- Post listing (HackerNews style) -->
        <div class="bg-white">
            <ul class="divide-y divide-gray-200">
                {% set posts = [
                    {
                        'id': 1,
                        'title': 'معرفی فریمورک جدید برای توسعه بک‌اند در پایتون',
                        'url': 'https://example.com/article1',
                        'domain': 'example.com',
                        'points': 120,
                        'author': 'محمد',
                        'time': '3 ساعت پیش',
                        'comments': 42
                    },
                    {
                        'id': 2,
                        'title': 'مقایسه React و Vue.js در سال 2025',
                        'url': 'https://techblog.ir/react-vs-vue-2025',
                        'domain': 'techblog.ir',
                        'points': 98,
                        'author': 'علی',
                        'time': '6 ساعت پیش',
                        'comments': 37
                    },
                    {
                        'id': 3,
                        'title': 'چرا PostgreSQL بهتر از MySQL است؟',
                        'url': 'https://dbmag.ir/postgresql-vs-mysql',
                        'domain': 'dbmag.ir',
                        'points': 72,
                        'author': 'سارا',
                        'time': '10 ساعت پیش',
                        'comments': 23
                    },
                    {
                        'id': 4,
                        'title': 'معرفی 10 کتابخانه‌ی ضروری جاواسکریپت در سال 2025',
                        'url': 'https://jsmag.ir/essential-libraries-2025',
                        'domain': 'jsmag.ir',
                        'points': 65,
                        'author': 'امیر',
                        'time': '12 ساعت پیش',
                        'comments': 19
                    },
                    {
                        'id': 5,
                        'title': 'آینده هوش مصنوعی و تاثیر آن بر برنامه‌نویسی',
                        'url': 'https://aiblog.ir/future-of-ai-programming',
                        'domain': 'aiblog.ir',
                        'points': 134,
                        'author': 'نازنین',
                        'time': '1 روز پیش',
                        'comments': 51
                    },
                    {
                        'id': 6,
                        'title': 'چگونه یک API امن طراحی کنیم؟',
                        'url': 'https://securityblog.ir/secure-api-design',
                        'domain': 'securityblog.ir',
                        'points': 87,
                        'author': 'رضا',
                        'time': '1 روز پیش',
                        'comments': 31
                    },
                    {
                        'id': 7,
                        'title': 'تسلط بر Git: ترفندهای پیشرفته برای توسعه‌دهندگان',
                        'url': 'https://gitblog.ir/advanced-git-tricks',
                        'domain': 'gitblog.ir',
                        'points': 109,
                        'author': 'مهدی',
                        'time': '2 روز پیش',
                        'comments': 28
                    },
                    {
                        'id': 8,
                        'title': 'آینده Cloud Computing و تاثیر آن بر صنعت نرم‌افزار',
                        'url': 'https://cloudmag.ir/future-of-cloud-computing',
                        'domain': 'cloudmag.ir',
                        'points': 76,
                        'author': 'زهرا',
                        'time': '2 روز پیش',
                        'comments': 22
                    },
                    {
                        'id': 9,
                        'title': 'راهنمای کامل Kubernetes برای توسعه‌دهندگان',
                        'url': 'https://devops.ir/kubernetes-guide',
                        'domain': 'devops.ir',
                        'points': 95,
                        'author': 'آرش',
                        'time': '3 روز پیش',
                        'comments': 33
                    },
                    {
                        'id': 10,
                        'title': 'چگونه TDD را در پروژه‌های خود پیاده‌سازی کنیم؟',
                        'url': 'https://testingblog.ir/tdd-implementation',
                        'domain': 'testingblog.ir',
                        'points': 82,
                        'author': 'نیما',
                        'time': '3 روز پیش',
                        'comments': 27
                    }
                ] %}

                {% for post in posts %}
                    <li class="py-4 hover:bg-gray-50 transition">
                        <div class="flex">
                            <!-- Post number -->
                            <div class="mr-4 text-gray-500 font-mono">{{ loop.index }}.</div>

                            <!-- Post content -->
                            <div class="flex-1">
                                <!-- Title and domain -->
                                <div class="flex flex-col md:flex-row md:items-baseline">
                                    <a href="{{ post.url }}"
                                       class="text-lg font-medium text-gray-900 hover:text-primary-600">
                                        {{ post.title }}
                                    </a>
                                    <span class="text-xs text-gray-500 md:mr-2">({{ post.domain }})</span>
                                </div>

                                <!-- Meta information -->
                                <div class="mt-1 text-xs text-gray-500">
                                    <span>{{ post.points }} امتیاز</span>
                                    <span class="mx-1">•</span>
                                    <span>{{ post.author }}</span>
                                    <span class="mx-1">•</span>
                                    <span>{{ post.time }}</span>
                                    <span class="mx-1">•</span>
                                    <a href="#" class="text-primary-600 hover:text-primary-800">
                                        {{ post.comments }} دیدگاه
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Pagination -->
        <div class="mt-8 flex justify-center">
            <nav class="inline-flex rounded shadow-sm">
                <a href="#"
                   class="px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-r-md hover:bg-gray-50">قبلی</a>
                <a href="#" class="px-3 py-2 text-white bg-primary-600 border border-primary-600">1</a>
                <a href="#" class="px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">2</a>
                <a href="#" class="px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">3</a>
                <a href="#" class="px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">4</a>
                <a href="#" class="px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">5</a>
                <a href="#"
                   class="px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-l-md hover:bg-gray-50">بعدی</a>
            </nav>
        </div>
    </div>
{% endblock %}