{% extends 'base.html.twig' %}

{% block title %}Welcome to Dorehami Website{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Dorehami Website</h1>
            <p class="lead">This is your home page.</p>
            <hr class="my-4">

            {% if is_granted('ROLE_USER') %}
                <p>You are logged in as {{ app.user.email }}</p>

                {% if app.user.avatarUrl %}
                    <img src="{{ app.user.avatarUrl }}" alt="User avatar" class="img-thumbnail" style="max-width: 100px;">
                {% endif %}

                {% if app.user.discordUsername %}
                    <p>Discord username: {{ app.user.discordUsername }}</p>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" class="btn btn-primary">Go to Admin Panel</a>
                {% endif %}

                <a href="{{ path('app_logout') }}" class="btn btn-secondary">Logout</a>
            {% else %}
                <p>Please log in to access your account</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                <a href="{{ path('connect_discord') }}" class="btn btn-secondary">
                    <i class="fab fa-discord"></i> Login with Discord
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}