                       class="px-4 py-2 rounded-lg text-sm font-medium {% if filter == 'popular' %}bg-primary-100 text-primary-800{% else %}bg-white text-gray-700 hover:bg-gray-100{% endif %} transition-colors duration-200">
                        محبوب‌ترین
                    </a>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_post_new') }}"
                           class="inline-flex items-center py-2 px-4 rounded-lg bg-primary-600 text-white text-sm font-medium hover:bg-primary-700 transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1.5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                                      clip-rule="evenodd"/>
                            </svg>
                            ارسال مطلب جدید
                        </a>
                    {% endif %}
                </div>
            </div>


            <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100">
                {% if posts|length > 0 %}
                    <ul class="divide-y divide-gray-100">
                        {% for post in posts %}
                            <li class="p-4 hover:bg-gray-50 transition-colors duration-200">
                                <div class="flex items-start">
                                    <div class="flex-shrink-0 ml-4 flex flex-col items-center">
                                        <div class="text-gray-500 font-medium">{{ post.points|persian_number }}</div>
                                        <div class="text-xs text-gray-400">امتیاز</div>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex flex-col md:flex-row md:items-baseline gap-1 md:gap-2">
                                            <a href="{{ path('app_post_show', {'id': post.id}) }}"
                                               class="text-lg font-medium text-gray-900 hover:text-primary-600 transition-colors duration-200">
                                                {{ post.title }}
                                            </a>
                                            <span class="text-xs text-gray-500 px-2 py-0.5 bg-gray-100 rounded md:ml-1 w-fit">({{ post.domain }})</span>
                                        </div>
                                        <div class="mt-2 flex flex-wrap items-center text-xs text-gray-500 gap-2">
                                            <span class="flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                     class="h-3.5 w-3.5 ml-1 text-gray-400" fill="none"
                                                     viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                                </svg>
                                                {{ post.author.displayName }}
                                            </span>
                                            <span>•</span>
                                            <span class="flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                     class="h-3.5 w-3.5 ml-1 text-gray-400" fill="none"
                                                     viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                {{ post.createdAt|persian_ago }}
                                            </span>
                                            <span>•</span>
                                            <a href="{{ path('app_post_show', {'id': post.id}) }}"
                                               class="flex items-center text-primary-600 hover:text-primary-800">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 ml-1"
                                                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                                                </svg>
                                                {{ post.comments|length|persian_number }} دیدگاه
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="py-12 text-center text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <p class="text-lg">هنوز مطلبی ارسال نشده است.</p>
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_post_new') }}"
                               class="mt-4 inline-block text-primary-600 hover:text-primary-800 font-medium">
                                اولین مطلب را ارسال کنید!
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>


            {% if posts|length > 0 %}
                <div class="mt-8 flex justify-center">
                    <nav class="inline-flex">
                        {% if pagination.has_previous %}
                            <a href="{{ path('app_home', {'filter': filter, 'page': pagination.previous_page}) }}"
                               class="inline-flex items-center justify-center px-4 h-10 ml-1 text-gray-700 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-opacity-50">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                          clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-sm">قبلی</span>
                            </a>
                        {% else %}
                            <span class="inline-flex items-center justify-center px-4 h-10 ml-1 text-gray-400 bg-white border border-gray-300 rounded-r-lg cursor-not-allowed">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                          clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-sm">قبلی</span>
                            </span>
                        {% endif %}

                        {% for i in 1..pagination.last_page %}
                            {% if i == pagination.current_page %}
                                <span class="inline-flex items-center justify-center px-4 h-10 text-white bg-primary-600 border border-primary-600 hover:bg-primary-700 font-medium">
                                    {{ i|persian_number }}
                                </span>
                            {% else %}
                                <a href="{{ path('app_home', {'filter': filter, 'page': i}) }}"
                                   class="inline-flex items-center justify-center px-4 h-10 text-gray-700 bg-white border border-gray-300 hover:bg-gray-100 hover:text-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-opacity-50">
                                    {{ i|persian_number }}
                                </a>
                            {% endif %}
                        {% endfor %}

                        {% if pagination.has_next %}
                            <a href="{{ path('app_home', {'filter': filter, 'page': pagination.next_page}) }}"
                               class="inline-flex items-center justify-center px-4 h-10 mr-1 text-gray-700 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-opacity-50">
                                <span class="text-sm">بعدی</span>
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                          clip-rule="evenodd"></path>
                                </svg>
                            </a>
                        {% else %}
                            <span class="inline-flex items-center justify-center px-4 h-10 mr-1 text-gray-400 bg-white border border-gray-300 rounded-l-lg cursor-not-allowed">
                                <span class="text-sm">بعدی</span>
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                          clip-rule="evenodd"></path>
                                </svg>
                            </span>
                        {% endif %}
                    </nav>
                </div>
            {% endif %}
        </section>
    </div>
{% endblock %}