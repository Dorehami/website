{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} | دورهمی{% endblock %}
{% block meta_description %}{{ post.title }} - ارسال شده توسط {{ post.author.displayName }} - {{ post.comments|length }} دیدگاه{% endblock %}
{% block meta_keywords %}{{ post.title|lower|replace({' ': ', '}) }}, دورهمی, توسعه‌دهندگان نرم‌افزار{% endblock %}
{% block og_type %}article{% endblock %}

{% block structured_data %}
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "DiscussionForumPosting",
            "headline": "{{ post.title }}",
    "url": "{{ app.request.schemeAndHttpHost ~ path('app_post_show', {'id': post.id}) }}",
    "datePublished": "{{ post.createdAt|date('c') }}",
    "author": {
        "@type": "Person",
        "name": "{{ post.author.displayName }}"
    },
    "interactionStatistic": {
        "@type": "InteractionCounter",
        "interactionType": "https://schema.org/CommentAction",
        "userInteractionCount": "{{ post.comments|length }}"
    },
    "commentCount": "{{ post.comments|length }}",
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ app.request.schemeAndHttpHost ~ path('app_post_show', {'id': post.id}) }}"
    }
}
    </script>
{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto">
        
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 p-4 rounded-md {% if type == 'success' %}bg-green-50 text-green-800{% else %}bg-red-50 text-red-800{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        
        <div class="bg-white p-6 rounded-lg mb-8">
            <div class="flex items-center mb-4 justify-between">
                <h1 class="text-2xl font-bold text-gray-900">{{ post.title }}</h1>
                {% if is_granted('ROLE_USER') %}
                    {% if not post.hasVotedBy(app.user) %}
                        <form action="{{ path('app_post_vote', {'id': post.id}) }}" method="post">
                            <button type="submit"
                                    class="inline-flex gap-1 text-xs items-center px-3 py-1 border border-primary-600 text-primary-600 rounded hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-500">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18"/>
                                </svg>
                                <span>امتیاز دادن</span>
                            </button>
                        </form>
                    {% else %}
                        <button type="submit"
                                disabled
                                class="inline-flex gap-1 text-xs items-center px-3 py-1 border border-primary-600 text-white rounded bg-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-500 cursor-not-allowed">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18"/>
                            </svg>
                            <span>امتیاز دادن</span>
                        </button>
                    {% endif %}
                {% endif %}
            </div>
            <div class="flex items-center text-sm text-gray-500 mb-4">
                <a href="{{ post.url }}" target="_blank" rel="noopener noreferrer"
                   class="text-primary-600 hover:text-primary-800">
                    {{ post.url }}
                </a>
                <span class="mx-2">({{ post.domain }})</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
                <span>{{ post.points|persian_number }} امتیاز</span>
                <span class="mx-2">•</span>
                <span>توسط {{ post.author.displayName }}</span>
                <span class="mx-2">•</span>
                <time>{{ post.createdAt|persian_ago }}</time>
            </div>
        </div>

        <div class="bg-white p-6 border-t border-primary-50">
            <h2 class="text-xl font-semibold mb-4">دیدگاه‌ها ({{ post.comments|length|persian_number }})</h2>

            {% if is_granted('ROLE_USER') %}
                <form action="{{ path('app_comment_new', {'postId': post.id}) }}" method="post" class="mb-8">
                    <div class="mb-4">
                        <label for="comment_content" class="block text-gray-700 font-semibold mb-2">دیدگاه شما</label>
                        <textarea name="content" id="comment_content" rows="4"
                                  class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md focus:outline-none focus:ring-primary-500 focus:border-primary-500"
                                  placeholder="دیدگاه خود را بنویسید..."></textarea>
                    </div>
                    <div>
                        <button type="submit"
                                class="py-2 px-4 bg-primary-600 text-white rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                            ارسال دیدگاه
                        </button>
                    </div>
                </form>
            {% else %}
                <div class="bg-gray-50 p-4 rounded mb-8">
                    <p class="text-gray-600">برای ارسال دیدگاه باید <a href="{{ path('app_login') }}"
                                                                       class="text-primary-600 hover:text-primary-800">وارد
                            سایت</a> شوید.</p>
                </div>
            {% endif %}

            {% if post.comments|filter(c => (c.visible is null or c.visible))|length > 0 %}
                <div class="space-y-6">
                    {% for comment in post.comments|filter(c => (c.visible is null or c.visible)) %}
                        <div class="border-b border-gray-200 pb-6 last:border-0">
                            <div class="flex items-center mb-2">
                                {% if comment.author.avatarUrl %}
                                    <img src="{{ comment.author.avatarUrl }}" alt="Avatar"
                                         class="w-8 h-8 rounded-full ml-2">
                                {% endif %}
                                <span class="font-semibold">{{ comment.author.displayName }}</span>
                                <span class="mx-2 text-gray-500">•</span>
                                <time class="text-sm text-gray-500">{{ comment.createdAt|persian_ago }}</time>
                            </div>
                            <div class="text-gray-800 whitespace-pre-line">
                                {{ comment.content|nl2br }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 italic">هنوز دیدگاهی ثبت نشده است.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}