{% extends 'base.html.twig' %}

{% block title %}ارسال مقاله جدید | دورهمی{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto">
        <h1 class="text-2xl font-bold mb-6">ارسال مقاله جدید</h1>

        {{ form_start(form, {'attr': {'class': 'bg-white p-6 rounded-lg'}}) }}
        {{ form_errors(form) }}

        <div class="mb-6">
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.title) }}
            {{ form_help(form.title) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.url, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.url) }}
            <p class="text-gray-500 text-sm mt-1">آدرس مقاله یا خبر را وارد کنید.</p>
            <p class="text-gray-500 text-sm mt-1">
                اگر این لینک قبلاً ارسال شده باشد، به صفحه آن مقاله هدایت خواهید شد.
            </p>
            {{ form_errors(form.url) }}
        </div>

        <div class="flex justify-between items-center">
            <button type="submit"
                    class="py-2 px-4 bg-primary-600 text-white rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                ارسال مقاله
            </button>
            <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-gray-800">
                انصراف
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}